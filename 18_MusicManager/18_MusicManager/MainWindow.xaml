<Window x:Class="_18_MusicManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Manager"
        Height="650"
        Width="900"
        Background="LightGreen">

    <Grid Margin="15">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SONGS -->
        <StackPanel Grid.Column="0" Margin="10" Background="#DFF5DF" >

            <Label Content="🎵 Songs"
                   Background="#64BC61"
                   FontWeight="Bold"
                   Padding="5"
                   HorizontalContentAlignment="Center"/>

            <Label Content="Titel"/>
            <TextBox Name="txtTitle" Margin="0,2"/>

            <Label Content="Interpret"/>
            <TextBox Name="txtArtist" Margin="0,2"/>

            <Label Content="Jahr"/>
            <TextBox Name="txtYear" Margin="0,2"/>

            <Label Content="Dateipfad"/>
            <TextBox Name="txtPath" Margin="0,2"/>

            <Button Content="Song hinzufügen"
                    Margin="0,5"
                    Background="#A0D6A0"
                    Click="AddSong_Click"/>

            <Button Content="Song löschen"
                    Margin="0,5"
                    Background="#F4A6A6"
                    Click="DeleteSong_Click"/>

            <ListBox Name="listSongs"
                     Height="250"
                     Margin="0,5"/>
        </StackPanel>

        <!-- PLAYLISTS -->
        <StackPanel Grid.Column="1" Margin="10" Background="#DFF5DF" >

            <Label Content="📂 Playlists"
                   Background="#64BC61"
                   FontWeight="Bold"
                   Padding="5"
                   HorizontalContentAlignment="Center"/>

            <Label Content="Name"/>
            <TextBox Name="txtListName" Margin="0,2"/>

            <Button Content="Playlist hinzufügen"
                    Margin="0,5"
                    Background="#A0D6A0"
                    Click="AddList_Click"/>

            <Button Content="Playlist löschen"
                    Margin="0,5"
                    Background="#F4A6A6"
                    Click="DeleteList_Click"/>

            <ListBox Name="Playlists"
                     Height="250"
                     Margin="0,5"
                     SelectionChanged="List_Selected"/>
        </StackPanel>

        <!-- PLAYLIST INHALT -->
        <StackPanel Grid.Column="2" Margin="10" Background="#DFF5DF" >

            <Label Content="▶ Playlist Inhalt"
                   Background="#64BC61"
                   FontWeight="Bold"
                   Padding="5"
                   HorizontalContentAlignment="Center"/>

            <Button Content="Song zur Playlist"
                    Margin="0,5"
                    Background="#A0D6A0"
                    Click="AddToList_Click"/>

            <Button Content="Song entfernen"
                    Margin="0,5"
                    Background="#F4A6A6"
                    Click="RemoveFromList_Click"/>

            <Button Content="Song abspielen"
                    Margin="0,5"
                    Background="#87CEFA"
                    Click="PlaySong_Click"/>

            <ListBox Name="ListSongs"
                     Height="300"
                     Margin="0,5"/>
        </StackPanel>

    </Grid>
</Window>
