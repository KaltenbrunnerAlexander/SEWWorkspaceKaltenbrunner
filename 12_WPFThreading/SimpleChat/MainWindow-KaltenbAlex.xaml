<Window x:Class="SimpleChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleChat"
        mc:Ignorable="d"
        Title="SimpleChat" Height="450" Width="800">
    <Grid>
        <StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Width="140">Host Port:</Label>
                <TextBox x:Name="tbx_hostingPort" Width="100"></TextBox>
                <Button Width="100" Click="Button_Click_Start_Server">Start</Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Width="140">Remote Server Port</Label>
                    <TextBox x:Name="tbx_remoteServerPort" Width="100"></TextBox>
                <Button Width="100" Click="Button_Click_Connect">Connect</Button>
            </StackPanel>

            <StackPanel Orientation="Vertical">

                <TextBox x:Name="tbx_sendMsg" Width="400"></TextBox>
                <ListView x:Name="lst_receiveMessage" Width="400" Height="200">
                </ListView>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
